# Base image PHP + Apache
FROM php:8.1-apache

# Aktifkan mod_rewrite (untuk .htaccess jika perlu)
RUN a2enmod rewrite

# Salin semua file ke direktori kerja di container
COPY . /var/www/html/

# Ubah permission agar Apache bisa akses
RUN chown -R www-data:www-data /var/www/html

# Set working directory ke folder public
WORKDIR /var/www/html/public

# Expose port 80 (default HTTP)
EXPOSE 80
